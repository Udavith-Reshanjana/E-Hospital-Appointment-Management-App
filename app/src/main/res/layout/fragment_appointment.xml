<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appointment">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:text="Appointment ID: $$$$$" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:textSize="18dp"
                android:text="Appointment Date:" />

            <EditText
                android:id="@+id/a_appointmentdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="150dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Booked On: " />

            <EditText
                android:id="@+id/a_booked"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="150dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Doctor Name: " />

            <EditText
                android:id="@+id/a_doc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="150dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Status: " />

            <EditText
                android:id="@+id/a_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="150dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Payment:" />

            <EditText
                android:id="@+id/a_pay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView38"
                android:layout_width="150dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Feedback:" />

            <EditText
                android:id="@+id/a_feedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:cursorVisible="true"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/leavefeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DEC5E3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Leave a feedback"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#B6DCFE"
                android:text="Back"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
